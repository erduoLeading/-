.container {
  display: flex;
  flex-direction: column;
  align-items: center;

  }
  .classic-img {
    width: 422rpx;
    height: 422rpx;
    margin-top: 60rpx;
    border-radius: 50%;
  }

  .classic-player {
    width: 120rpx;
    height: 120rpx;
    position: relative;
    bottom: 270rpx;
  }

  .classic-tag {
    width: 44rpx;
    height: 128rpx;
    position: relative;
    right: 310rpx;
    bottom: 160rpx;
  }

  .rotation {
    transform: totate(360deg);
    animation: rotation 12s linear infinite;
  }

  @keyframes rotation {
    from {
      transform: rotate(0deg)
    }
    to {
      transform: rotate(360deg)
    }
  }